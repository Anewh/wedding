{
  "name": "wedding",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "nest build",
    "back": "nest start",
    "back:dev": "nest start --watch",
    "back:debug": "nest start --debug --watch",
    "back:prod": "node dist/main",
    "front": "npx @tailwindcss/cli -i front/stylesheets/main.css -o public/stylesheets/main.css",
    "front:dev": "npx @tailwindcss/cli -i front/stylesheets/main.css -o public/stylesheets/main.css --watch",
    "front:prod": "npx @tailwindcss/cli -i front/stylesheets/main.css -o public/stylesheets/main.css --minify",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/static": "^8.1.0",
    "@fastify/view": "^10.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-fastify": "^11.0.8",
    "@tailwindcss/postcss": "^4.0.5",
    "handlebars": "^4.7.8",
    "reflect-metadata": "^0.2.2",
    "requirejs": "^2.3.7",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "autoprefixer": "^9.8.8",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^13.0.1",
    "source-map-support": "^0.5.21",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
